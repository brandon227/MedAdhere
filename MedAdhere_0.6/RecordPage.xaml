<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="MedAdhere_0.RecordPage"
    Title="Record" 
    Icon="ic_done.png">
	<ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Record Side-Effects, Blood Pressure, and Adherence Data" TextColor="Green"/>
            <Button Text="New Entry" Clicked="Handle_Clicked"/>
            <Button Text="Check Bluetooth Connection" Clicked="Status_Check_Clicked" />
            <Button Text="Open Device List Page" Clicked="Go_DeviceListPage" />
            <Button Text="Connect to Cureka" Clicked="Connect_Clicked" />
            <Button Text="Read Test" Clicked="Clicked_ReadTest" />
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
