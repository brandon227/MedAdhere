<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MedAdhere_0.Rec_Vitals"
    Title="Basic Health">
	<ContentPage.Content>
        <StackLayout HorizontalOptions="Center">

            <Label Text="Blood Pressure" />
            <Entry Placeholder="Systolic Blood Pressure" />
            <Entry Placeholder="Diastolic Blood Pressure" />

            <Label Text="Blood Glucose" />
            <Entry Placeholder="Units for Blood Sugar" />

            <Label Text="Heart Rate" />
            <Entry Placeholder="Beats per Minute"/>

            <Label Text="How do you feel on a scale from 1-10?" />

            <Button Text="Next" Clicked="Handle_Clicked" />
        </StackLayout>
	</ContentPage.Content>
</ContentPage>
